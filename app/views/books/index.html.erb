<div class="container">
   <div class="row">
    <%= render 'books/list' , book: @book, books: @books, user: current_user  %>
      <div class="col-md-8 offset-md-1" >
      <h2>Books</h2>
      <table class="table-books">
        <thead>
          <tr>
            <th colspan="1"></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%=link_to  user_path(book.user.id) do%>
                <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg",size: :'40x40' %>
                <%end%>
              </td>
              <td>
                <%=link_to book.title , book_path(book.id)%>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          <%end%>
        </tbody>
      </table>
      </div>
    </div>
</div>
