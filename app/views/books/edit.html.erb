<div class="edittingbook">
<h1>Editing Book</h1>

　 <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>

　<%= form_with model: @book, local: true do |f| %>
　 <% if @book.errors.any? %>
　 <p>2 errors prohibited this book from being saved:</p>
    <ul>
     <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
     <% end %>
    </ul>
   <% end %>
   <div class="title">
  　<h6>Title</h6>
 <%= f.text_field :title, class: 'text_area'%>
　</div>
　<div class="opinion">
  　<h6>Opinion</h6>
  <%= f.text_field :body, class: 'text_area2'%>
  </div>
<div class="update">
  　<%= f.submit 'Update Book' , class: "btn btn-success" %>
</div>
　<% end %>
　<%= link_to "Show", book_path(@book.id)%>
　<%= link_to "Back", books_path%>
</div>