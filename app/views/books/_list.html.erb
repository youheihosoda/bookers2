<!--フラッシュメッセージ-->
<% if flash[:notice] %>
 <p id="notice">
   <%= flash[:notice] %>
 </p>
   <% end %>

<!--自己情報-->
 <div class="col-md-3" >
<h2>User info</h2>
<div class="profile-container">
  <%= attachment_image_tag user,:profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <h4 class="profile-name"> name  <%= user.name %></h4>
</div>
<h4>introduction</h4>
<%= user.introduction %>
<!--編集コマンド-->
<div class="intro">
<%= link_to  edit_user_path(user), class:"fas fa-user-cog" do%>
<%end%>
</div>
<!--投稿フォーム-->
<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model:book, url: books_path, local:true do |f| %>
　 <% if @book.errors.any? %>
　 <p>2 errors prohibited this book from being saved:</p>
    <ul>
     <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
     <% end %>
    </ul>
   <% end %>

   <!--新規投稿フォーム-->
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>
<div class="submit">
  <%= f.submit 'Create Book', class: "btn btn-success" %>
</div>
<% end %>
</div>


