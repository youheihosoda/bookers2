<div class="container">
 <div class="row">
  <%= render 'books/list', user: @user, book: @book %>
  <div class="col-md-8 offset-md-1">
   <div class="books">
    <table class="show">
     <thead>
      <tr>
       <th colspan="1"></th>
       <th>Title</th>
       <th>Opinion</th>
      </tr>
     </thead>
     <tbody>
      <div class="books">
       <h2>Books </h2>
       <% @books.each do |list| %>
        <tr>
         <td>
          <%= link_to  user_path(list.user) do %>
           <%= attachment_image_tag list.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg",size: :'40x40' %>
          <% end %>
         </td>
         <td>
          <%= link_to list.title , book_path(list.id) %>
         </td>
         <td>
          <%= list.body %>
         </td>
        </tr>
       <% end %>
      </div>
     </tbody>
    </table>
   </div>
  </div>
 </div>
</div>
