<div class="container">
 <div class="row">
  <%= render 'books/list' , user: current_user, users: @users , book: @book%>
   <div class="col-md-8 offset-md-1" >
   <h1>Users</h1>
   <table class="table-users">
     <thead>
      <tr>
       <th>image</th>
       <th>name</th>
       <th colspan="1"></th>
      </tr>
     </thead>
     <tbody>
      <% @users.each do |user| %>
       <tr>
        <td>
         <%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg",size: :'40x40'%>
        </td>
        <td>
         <%= user.name %>
        </td>
        <td>
        <%=link_to "Show", user_path(user)%>
        </td>
       </tr>
      <% end %>
     </tbody>
   </table>
  </div>
 </div>
</div>